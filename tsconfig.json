{
  "compilerOptions": {
    "target": "es2015",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "_helper": ["helper"],     
      "_const": ["constants"],   
      "_db": ["databases"],
      "_types": ["types"]
    }
  },
  "include": ["./src"]
}
